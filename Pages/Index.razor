@page "/"
@inject NavigationManager Navigation
@inject SpotifyAuthService SpotifyAuthService

<div class="d-flex flex-column mb-5 justify-content-center align-items-center vh-100 text-center mt-5">
    <div class="d-flex justify-content-center align-items-center">
        <img src="images/logo.png" class="logo img-fluid me-3" alt="Spotly Logo">
        <h1 class="display-4">Welcome to Spotly!</h1>
    </div>

    <p class="lead text-muted">Create and manage your Spotify playlists easily.</p>
    <p class="lead text-muted">Press the button below to use the app.</p>

    <div class="mt-4">
        <button class="btn btn-success btn-lg" @onclick="LoginWithSpotify">Start</button>
    </div>
</div>

@code {
    private void LoginWithSpotify()
    {
        var authUrl = SpotifyAuthService.GetAuthorizationUrl();

        Navigation.NavigateTo(authUrl, forceLoad: true);
    }
}